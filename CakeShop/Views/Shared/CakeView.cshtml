@model Cake

<div class="col-lg-4 col-md-6 col-sm-6">
    <div class="card" style="" onclick="javascript:window.location.href='/cakes/details/@Model.Id'">
        <img class="card-img-top" src="@Model.ImageThumbnailUrl" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">
                @Model.Name
            </h5>
            <p class="card-text">@Model.Price.ToString("c")</p>
            <p class="card-text"><i>@Model.ShortDescription</i></p>
            <form asp-action="AddToShoppingCart"
                  asp-controller="ShoppingCart"
                  asp-route-cakeId="@Model.Id"
                  method="post">

                <button class="btn btn-primary buy-now-btn float-right">Add to Cart</button>
            </form>

        </div>
    </div>
</div>
